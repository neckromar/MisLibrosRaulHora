<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:paddingStart="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imagenf"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/nota"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="imagen"
        android:scaleType="fitCenter"
        android:src="@drawable/libro1"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/autorportada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloportada"
        android:layout_alignStart="@+id/tituloportada"
        android:layout_alignParentEnd="true"
        android:hint="Autor"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:id="@+id/nota"
        style="@android:style/Widget.Material.Light.RatingBar.Indicator"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autorportada"
        android:layout_alignStart="@+id/autorportada"
        android:layout_alignLeft="@+id/autorportada"
        android:layout_toEndOf="@+id/tituloportada"
        android:numStars="5"
        android:rating="5"
        android:stepSize="0.1"
        android:theme="@style/RatingBar" />
    tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tituloportada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/imagenf"
        android:hint="Titulo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />


</RelativeLayout>